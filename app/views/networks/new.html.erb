<h1><i class="fa fa-users" aria-hidden="true"></i> Create New Network</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@network) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>

      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :icon%> (square pictures work the best for profile image)
      <%= f.file_field :picture %>

      <%= f.submit "Create my Network", class: "btn btn-primary" %>
<% end %>
</div>
</div>