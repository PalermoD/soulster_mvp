<% provide(:title, "Home") %>

<% if logged_in? %>
<div class="network-header col-md-12">
	<h3 class="network-title">Main Newsfeed</h3>
</div>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
      
    </aside>
    <div class="col-md-8">

      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

<% else %>

<div class="center slogan">
  <h1>Welcome to Soulster</h1>

  <h2>
    A Social Network for Everyone
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>
